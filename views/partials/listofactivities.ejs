<table class="table table-hover clickable-row" >
    <thead>
        <tr>
        <th scope="col">Date & Time</th>
        <th scope="col">Location</th>
        <th scope="col">Host</th>
        <th scope="col">Sport</th>
        </tr>
    </thead>
    <tbody id="listofactivities">
        <% var i=1; eventList.forEach((elem) => { %>
            <tr id=<%= elem._id %> class="<%= elem.sport %>" data-href="/<%= elem._id %>">
                <td><%= (new Date( elem.eventDate)).toLocaleDateString("en-SG") %>, <%= (new Date( elem.eventDate)).toLocaleString("en-SG", {timeStyle: 'short'}) %></td>
                <td><%= elem.locationName %></td>
                <td><%= elem.host %></td>
                <td><%= elem.sport %></td>
            </tr>
            <% i++ ; %>
        <% }); %>
    </tbody>
</table>
