<%- include('partials/header-nonav') %>
  <div class="row text-center justify-content-md-center">
    <div class="col-md-4 ">
      <form class="form-signin" action="/register" method="post">
        <p class="font-weight-bold loginlogo" href="/signin">PlayPal <i class="fas fa-volleyball-ball"></i></p>
        <h1 class="h3 mb-3 fw-normal">Please register with your email and preferred password.</h1>
        <div class="form-floating">
          <input name="registerFirstName" class="form-control" id="floatingInput">
          <label for="floatingInput">First Name</label>
        </div>
        <div class="form-floating">
          <input name="registerLastName" class="form-control" id="floatingInput">
          <label for="floatingInput">Last Name</label>
        </div>
        <div class="form-floating">
          <input type="email" name="username" class="form-control" id="floatingInput" placeholder="name@example.com">
          <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
          <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
          <label for="floatingPassword">Password</label>
        </div>
    
        <button class="w-100 btn btn-lg btn-primary mt-2" type="submit">Register!</button>

      </form>
    </div>
  </div>
   
<%- include('partials/footer') %>